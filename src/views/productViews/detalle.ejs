<!DOCTYPE html>
<html lang="es">

<head>

  <!-- metas and lynks -->
  <%- include('../partials/metasBasics') %>
    <!-- metas and lynks -->

    <link rel="stylesheet" href="/css/product/detalle.css" />
    <link rel="stylesheet" href="/css/product/componentCard.css">
    <title>Inicio</title>
</head>

<body>

  <!-- header -->
  <%- include('../partials/header') %>
    <!-- header -->

    <main>

      <div class="container-detail">
        <div class="div-marca">
          <a class="marca" href="/product/detail/<%= product.id %>"> </a>
        </div>
        <div class="nombre">
          <%= product.name %>
        </div>
        <div class="img">
          <img src="/img/products/<%= product.image %> " alt="">
        </div>
        <div class="precio">
          $ <%= product.price %>
        </div>
        <% if ( locals.isLogged && (userLogged.type_id==1 || userLogged.type_id==3)) { %>
          <a class="btn-editar" href="/product/update/<%= product.id %>">EDITAR</a>
          <form action="/product/<%= product.id %>?_method=DELETE" method="POST">
            <button class="btn-eliminar" type="submit">ELIMINAR</button>
          </form>

          <% } else { %>
            <a class="btn-comprar">COMPRAR</a>
            <a class="btn-agregar">AGREGAR AL CARRITO</a>
            <% } %>

      </div>
      <!-- <div class="caracts">
        <div class="title-caract">Caracter√≠sticas del producto</div>
        <div class="caracteristicas"><span class="dot"></span> Color:    <div class="valor"><%= product.color?product.color.name:'' %></div></div>
        <div class="caracteristicas"><span class="dot"></span> Marca:    <div class="valor"><%= product.brand?product.brand.name:'' %></div></div>
        <div class="caracteristicas"><span class="dot"></span> Almacenamiento:     <div class="valor"><%= product.memory?product.memory.name:'' %></div></div>
        <div class="caracteristicas"><span class="dot"></span> Memoria Ram:    <div class="valor"><%= product.ram?product.ram.name:'' %></div></div>
      </div> -->


      <section class="interes">
        <div class="title-interes">
          TE PUEDE INTERESAR
        </div>

        <% if (locals.products) { %>
          <%- include('../partials/componentCard',{products}) %>
            <% } %>


      </section>

    </main>

    <!-- footer -->
    <%- include('../partials/footer') %>
      <!-- footer -->

</body>

</html>