<!DOCTYPE html>
<html lang="es">

<head>

  <!-- metas and lynks -->
  <%- include('../partials/metasBasics') %>
    <!-- metas and lynks -->

    <link rel="stylesheet" href="/css/product/update.css" />
    
    <title>Actualizar Producto</title>
</head>

<body>

  <!-- header -->
  <%- include('../partials/header') %>
    <!-- header -->

    <main>
      <div class="container-product-update">
        <div class="title-update">
          EDITAR PRODUCTO: <%= product.name %>
        </div>
        <form class="form-product-update" action="/product/<%= product.id %>?_method=PUT" method="POST"
          enctype="multipart/form-data">

          <div class="errorsList"></div>

          <input type="text" name="name" id="name" placeholder="Nombre del producto" value="<%= product.name %>">
          
          <select class="select" name="category" id="category">
            <option value="">Categor√≠a:</option>
            <% if (locals.categories) { %>

              <% categories.forEach(element=> { %>
                <option <% if (product.category_id == element.id ) { %>selected<% } %> value="<%= element.id %> "><%= element.name %> </option>
              <% }) %>

            <% } %>
          </select>

          <input type="text" name="price" placeholder="Precio" value="<%= product.price %>">

          <snap class="file">Imagen del producto:<input type="file" class="input-file" name="imgCel" id="imgCel"
              accept="image/jpg, image/jpeg, image/png"></snap>

          <img src="/img/products/<%= product.image %> " alt="">

          <div class="btn-content"><button type="submit">EDITAR</button></div>
          <input class="oculto" type="text" value="<%= product.product_img %>" name="imgCel_old">
        </form>
      </div>
    </main>

    <!-- footer -->
    <%- include('../partials/footer') %>
      <!-- footer -->
<script src="/js/product/update.js"></script>
</body>

</html>